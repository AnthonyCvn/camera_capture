<?xml version="1.0"?>
<launch>
  <!-- First camera -->
  <group ns="camera0">
      <include file="$(find camera_capture)/launch/camera_capture.launch">
          <arg name="camera_num"	value="0" />
      </include>
  </group>
 
  <!-- Second camera -->
  <group ns="camera1">
      <include file="$(find camera_capture)/launch/camera_capture.launch">
          <arg name="camera_num"	value="1" />
      </include>
  </group>

  <!-- Third camera -->
  <group ns="camera2">
      <include file="$(find camera_capture)/launch/camera_capture.launch">
          <arg name="camera_num"	value="2" />
      </include>
  </group>

  <!-- Fourth camera -->
  <group ns="camera3">
      <include file="$(find camera_capture)/launch/camera_capture.launch">
          <arg name="camera_num"	value="3" />
      </include>
  </group>

</launch>
